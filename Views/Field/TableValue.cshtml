@{ ViewData["Title"] = "Alan Tablo Sayfası"; }
@model List<FieldsViewModel>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Alanlar</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Sites", "Site")">Siteler</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Definitions", "Definition")">Tanımlar</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Fields", "Field")">Alanlar</a>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">


    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Bu ekrandan alanları görüntüleyebilir, silebilir ve filtreleyebilirsiniz...</h5>

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <input type="text" class="form-control form-control-sm m-b-xs" id="filter"
                           placeholder="Search in table">

                    <table class="footable table table-stripped" data-page-size="8" data-filter=#filter>
                        <thead>

                            <tr>
                                <th>Site</th>
                                <th>Tanım</th>
                                <th>Alan</th>
                                <th>Ekleyen</th>
                                <th data-hide="phone,tablet">Ekleme Tarihi</th>
                                <th data-hide="phone,tablet" colspan="3">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                <tr class="gradeX">
                    <td>@item.SiteName</td>
                    <td>@item.DefinitionName</td>
                    <td>@item.FieldName</td>
                    <td>
                        @item.CreatedName
                    </td>
                    <td>
                        @item.CreateDate.ToShortDateString()
                    </td>
                    <td class="project-actions">
                        <a href="/Field/Detail?id=@item.Id" class="btn btn-white btn-sm"><i class="fa fa-pencil mr-2"></i>Güncelle</a>
                    </td>
                    <td class="project-actions">
                        <a href="#" class="btn btn-white btn-sm  delete-button" data-id="@item.Id" data-siteId="@item.SiteId" data-definitionId="@item.DefinitionId"><i class="fa fa-remove mr-2"></i>Sil</a>
                    </td>
                </tr>
}

                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/footable/css/footable.core.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/footable/css/footable.core.min.css" />
    </environment>
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/footable/dist/footable.all.min.js"></script>
    </environment>
    <script src="~/js/pages/field/delete.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('.footable').footable();
            $('.footable2').footable();


        });
    </script>
}