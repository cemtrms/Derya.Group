@model FieldItemUpdateViewModel
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Değer Güncelleme</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>


</head>
<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h5 class="logo-name">Değer +</h5>

            </div>
            <p><strong>@Model.SiteName</strong> sitesinin <strong>@Model.DefinitionName</strong> tanımının <strong>@Model.FieldName</strong> alanının değerini güncellemek üzeresiniz !</p>
            <form class="m-t" role="form" asp-action="Update" asp-controller="FieldItem" method="post">
                <input type="hidden" asp-for="@Model.SiteId" />
                <input type="hidden" asp-for="@Model.DefinitionId" />
                <input type="hidden" asp-for="@Model.FieldId" />
                <input type="hidden" asp-for="@Model.FieldValueId" />
                <input type="hidden" asp-for="@Model.FieldItemId" />
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" required="" asp-for="FieldItemValue">
                </div>
                <div class="row" id="viewCourseCodeField">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Güncelle</button>
                <p class="text-muted text-center"><small>Güncellemeyi iptal edin !</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Detail", "Field",new {id=Model.FieldId} )">Vazgeç</a>
                <p class="text-muted text-center"><small>Var olan alanlara gidin</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Fields", "Field" )">Tanımlar</a>
                <p class="text-muted text-center"><small>Tanım bilgilerine gidin !</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Fields", "Field" )">Tanımlara Gidin</a>
            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>
</body>

